{% macro categoriasidebar(categoria) %}
    {% from 'bootstrap5/utils.html' import render_icon %}
    <table class="table table-sm small">
        <tr>
            <th scope="row">Data de cadastro</th>
            <td>{{ categoria.dta_cadastro | as_localtime }}</td>
        </tr>
        <tr>
            <th scope="row">Data da última alteração</th>
            <td>{{ categoria.dta_atualizacao | as_localtime }}</td>
        </tr>
        <tr>
            <th scope="row">Número de produtos</th>
            <td class="text-end">{{ categoria.lista_de_produtos | length }}</td>
        </tr>
    </table>
    <a href="{{ url_for('categoria.lista') }}">
        <button type="button" class="btn btn-secondary btn-sm">
            {{ render_icon("x-lg") }}Cancelar alterações
        </button>
    </a>
{% endmacro %}
